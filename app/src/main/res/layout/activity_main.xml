<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mobsys.fhdortmund.sportabzeichen_verwaltung.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karte"
        android:id="@+id/button_showMap"
        android:layout_marginTop="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_showAthleteOverview"
        android:layout_alignStart="@+id/button_showAthleteOverview"
        android:onClick="showMap"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sportler"
        android:id="@+id/button_showAthleteOverview"
        android:onClick="showAthleteOverview"
        android:layout_below="@+id/button_showMap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/login_as"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_logout"
        android:layout_toStartOf="@+id/button_logout" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button_logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="logout"

        />

</RelativeLayout>
