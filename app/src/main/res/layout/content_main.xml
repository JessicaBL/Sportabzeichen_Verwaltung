<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main2"
    tools:context="com.mobsys.fhdortmund.sportabzeichen_verwaltung.MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_map"
        android:src="@drawable/map"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/textView_loginAs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showMap"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_athletes"
        android:src="@drawable/athletes"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/textView_loginAs"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:onClick="showAthleteOverview"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/image"
        android:layout_below="@+id/imageButton_map"
        android:layout_marginTop="174dp"
        android:layout_gravity="left|right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView_loginAs"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageButton_athletes"
        android:layout_alignEnd="@+id/imageButton_athletes" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_medal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/abzeichen"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="showMedal"/>
    />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageButton_athletes"
        android:layout_alignStart="@+id/imageButton_athletes"
        android:src="@drawable/hilfe"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="showHelp"
        />

</RelativeLayout>
