<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mobsys.fhdortmund.sportabzeichen_verwaltung.NewSports"
    tools:showIn="@layout/activity_new_sports">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ausdauer"
        android:id="@+id/radioButton_endurance"
        android:checked="false"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onRadioButtonEnduranceClicked"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kraft"
        android:id="@+id/radioButton_strength"
        android:checked="false"
        android:layout_alignTop="@+id/radioButton_endurance"
        android:layout_centerHorizontal="true"
        android:onClick="onRadioButtonStrengthClicked"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schnelligkeit"
        android:id="@+id/radioButton_agility"
        android:checked="false"
        android:layout_alignTop="@+id/radioButton_coordination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onRadioButtonAgilityClicked"
        android:layout_marginBottom="25dp" />
    />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koordination"
        android:id="@+id/radioButton_coordination"
        android:layout_below="@+id/radioButton_strength"
        android:layout_alignLeft="@+id/radioButton_strength"
        android:layout_alignStart="@+id/radioButton_strength"
        android:checked="false"
        android:onClick="onRadioButtonCoordinationClicked"/>

    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kategorie"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Disziplin"
        android:id="@+id/textView7"
        android:layout_below="@+id/radioButton_agility"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_sports"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView7"
        android:choiceMode="singleChoice"
        android:listSelector="?attr/colorPrimary"
        />

    />


</RelativeLayout>